<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 底部栏的四个图标样式 -->
    <style name="index_bottom_img">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- 底部栏的文字样式 -->
    <style name="index_bottom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/index_botton_text_normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 一般的文字提示 -->
    <style name="text_hint">
        <item name="android:textColor">@color/location</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 一般的输入框文字提示 -->
    <style name="edit_text_hint">
        <item name="android:textColorHint">@color/edit_hint</item>
        <item name="android:textColor">@color/edit_hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 显示性别，家乡的文字要加深 -->
    <style name="text_black">
        <item name="android:textColor">@color/tiezi</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 一般的文本 -->
    <style name="click_text_hint">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 选择性别，头像的布局 按钮 -->
    <style name="set_sex_head_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:background">@drawable/corners_storke_weibo</item>
        <item name="android:textColor">@color/bluetext</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>