<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <include layout="@layout/top_bar_back" />

    <TextView
        android:id="@+id/register_verigication_hint"
        style="@style/text_hint"
        android:layout_width="match_parent"
        android:layout_height="29dip"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_phone_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_verivation_et"
                style="@style/edit_text_hint"
                android:layout_width="0.0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/pleaseinputverfivation"
                android:inputType="numberPassword"
                android:paddingLeft="26dip" />

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="44dp"
                android:background="@color/edit_hint"
                android:orientation="horizontal" >
            </LinearLayout>

            <Button
                android:id="@+id/register_verivation_again_btn"
                style="@style/edit_text_hint"
                android:layout_width="0.0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="RegisterVerivationAgainTv"
                android:gravity="center"
                android:text="@string/getverification" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="26dip"
            android:layout_marginRight="26dip"
            android:background="@color/edit_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip" >

            <EditText
                android:id="@+id/register_verivation_word_et"
                style="@style/edit_text_hint"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="26dip"
                android:background="@null"
                android:ems="10"
                android:hint="@string/setpasswoed"
                android:inputType="numberPassword" />
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/text_hint"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="39dip"
        android:background="@drawable/next_bg"
        android:onClick="registerVerigicationNextBtn"
        android:text="@string/next"
        android:textColor="@color/index_color"
        android:textSize="18sp" />

</LinearLayout>