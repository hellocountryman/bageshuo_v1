<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_details_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dip"
            android:clickable="true"
            android:drawableLeft="@drawable/selector_share"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:text="200"
            android:textColor="@color/text_hint"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_details_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dip"
            android:clickable="true"
            android:drawableLeft="@drawable/selector_comment"
            android:drawablePadding="5dip"
            android:text="200"
            android:textColor="@color/text_hint"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_details_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_good_press"
            android:drawablePadding="5dip"
            android:text="200"
            android:textColor="@color/click_color"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="12dip"
        android:background="@color/huatiandperson" />

</LinearLayout>