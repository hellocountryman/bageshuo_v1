<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <include layout="@layout/top_bar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:background="@drawable/ic_more_main"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/bageshuo_spinner"
                android:layout_width="0.0dip"
                android:layout_height="50.0dip"
                android:layout_weight="3"
                 android:layout_margin="8.0dip"
                android:background="@color/white"
                android:textColor="@color/tiezi"
                android:textSize="18sp" />

            <include layout="@layout/partingline_vertical_part" />

            <Button
                android:layout_width="0.0dip"
                android:layout_height="50.0dip"
                android:layout_margin="8.0dip"
                android:layout_weight="2"
                android:background="@color/white"
                android:text="@string/bageonce"
                android:textColor="@color/tiezi"
                android:textSize="18sp" />
        </LinearLayout>

        <include layout="@layout/partingline_part" />

        <EditText
            android:id="@+id/publish_text_et"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/corners_storke_weibo"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/saywhat"
            android:inputType="textMultiLine"
            android:padding="16.0dip"
            android:textColorHint="#656d78"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>